<main class="
    login
    d-flex
    flex-column flex-lg-row
    justify-content-center
    align-items-center
    mx-auto
  ">
  <section class="login__background col-lg-6"></section>
  <section class="
      login__container
      col-12 col-lg-6
      d-flex
      flex-column
      justify-content-start justify-content-md-center
      align-items-center
    ">
    <header class="login__header">
      <img src="./assets/img/logo/logo_white_resized.png" alt="Bullet CrossFit Logo" class="header__logo" />
      <h1 class="header__title text-center text-uppercase">Bienvenido</h1>
    </header>
    <form action=" #" class="login__form" id="login-form">
      <div class="
          login__input--container
          d-flex
          justify-content-center
          align-items-center
          flex-column
        ">
        <div class="login__input">
          <label for="email">Correo electrónico</label>
          <input type="email" name="email" id="email" required />
        </div>
        <div class="login__input">
          <label for="password">Contraseña</label>
          <input type="password" name="password" id="password" required />
          <span class="password--toggle"></span>
        </div>
      </div>
      <div class="
          login__button--container
          d-flex
          align-items-center
          justify-content-between
        ">
        <a href="#" class="login__passrecover">Recuperar contraseña</a>
        <!-- <button type="submit" class="login__submit">Ingresa</button> -->
        <a href="/home" class="button__submit--fake">Ingresa</a>
      </div>
    </form>
    <a href="#" class="login__privacy d-flex justify-content-center align-items-center">Aviso de privacidad</a>
  </section>
</main>